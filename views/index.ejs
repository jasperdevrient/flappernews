<body ng-app="FlapperNews" >

  <nav class="navbar navbar-fixed pull-right" ng-controller="NavCtrl">
    <ul class="nav navbar-nav">
      <li ng-show="isLoggedIn()"><a>{{ currentUser() }}</a></li>
      <li ng-show="isLoggedIn()"><a href="" ng-click="logOut()">Log Out</a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/login">Log In</a></li>
      <li ng-hide="isLoggedIn()"><a href="/#/register">Register</a></li>
    </ul>
  </nav>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div ui-view></div>
    </div>

  </div>
  <script type="text/ng-template" id="/home.html">
    <div class="page-header">
      <h1>Flapper News</h1>
    </div>

    <div ng-repeat="post in posts| orderBy: '-upvotes'">
      <div class="panel panel-default">
        <div class="panel-heading">
            <span ng-click="incrementUpvotes(post)" class="glyphicon glyphicon-thumbs-up"></span> {{post.upvotes}}
            <span style="margin-left: 10px; font-size: 20px">
                          <a href="{{post.link}}" target="_blank" ng-show="post.link">{{post.title}}</a>
                        <span ng-show="post.author">
                          posted by <a>{{post.author}}</a> |
                        </span>
      <span ng-hide="post.link"> {{post.title}} </span>
        </span>
      </div><div class="panel-body">
      <div ng-bind-html="post.description"/>
      <span><a href="#/posts/{{post._id}}"> Readmore </a></span>

      </div>
      </div>

    </div>

    <form ng-submit="addPost()" ng-show="isLoggedIn()" style="margin-top: 20px">
      <div class="form-group">
        <input class="form-control" placeholder="Title" type="text" ng-model="title" />
      </div>
      <div class="form-group">
        <input class="form-control" placeholder="Link" type="text" ng-model="link" />
      </div>
      <div class="form-group">
        <div text-angular ng-model="description" placeholder="Description" ></div>
      </div>
      <div class="form-group">
        <input class="form-control" type="submit" value="Post" />
      </div>
    </form>
    <div ng-hide="isLoggedIn()">
      <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
    </div>
  </script>
  <script type="text/ng-template" id="/posts.html">
    <div class="page-header">
      <h3>
                    <a href="{{post.link}}" target="_blank" ng-show="post.link">{{post.title}}</a>
                    <span ng-hide="post.link"> {{post.title}} </span> By <a>{{post.author}}</a>
                </h3>
                <div ng-bind-html="post.description" />
    </div>

    <ul ng-repeat="comment in post.comments| orderBy:'-upvotes'" class="timeline">
        <li ng-hide="post.author != comment.author">
            <div class="timeline-badge"></div>
            <div class="timeline-panel">

                  <div class="timeline-heading">
                  <h5 class="timeline-title">
                     {{comment.author}}
                    </h5>
                    <p><small class="text-muted"><span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span> {{comment.upvotes}} likes this answer</small></p>
                  </div>
                  <div class="timeline-body">

                      <div ng-bind-html="comment.body" ></div>

                 </div>
            </div>
        </li>
        <li class="timeline-inverted" ng-hide="post.author == comment.author">
            <div class="timeline-badge"></div>
            <div class="timeline-panel">
                  <div class="timeline-heading">
                  <h5 class="timeline-title">
                  {{comment.author}}
                    </h5>
                    <p><small class="text-muted">  <span class="glyphicon glyphicon-thumbs-up" ng-click="incrementUpvotes(comment)"></span> {{comment.upvotes}} likes this answer</small></p>
                  </div>
                  <div class="timeline-body">

                      <div ng-bind-html="comment.body" ></div>

                 </div>
            </div>
        </li>
    </ul>

    <form ng-submit="addComment()" ng-show="isLoggedIn()" style="margin-top:30px;">
      <h3>Add a new Comment </h3>
      <div class="form-group">
        <div text-angular ng-model="body" placeholder="Comment" >
        </div>
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">Add comment</button>
      </div>
    </form>
    <div ng-hide="isLoggedIn()">
      <h3>You need to <a href="/#/login">Log In</a> or <a href="/#/register">Register</a> before you can add a post.</h3>
    </div>
  </script>

  <script type="text/ng-template" id="/register.html">
    <div class="page-header">
      <h1>Flapper News</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="register()" style="margin-top:30px;">
      <h3>Register</h3>

      <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Register</button>
    </form>
  </script>

  <script type="text/ng-template" id="/login.html">
    <div class="page-header">
      <h1>Flapper News</h1>
    </div>

    <div ng-show="error" class="alert alert-danger row">
      <span>{{ error.message }}</span>
    </div>

    <form ng-submit="logIn()" style="margin-top:30px;">
      <h3>Log In</h3>

      <div class="form-group">
        <input type="text" class="form-control" placeholder="Username" ng-model="user.username"></input>
      </div>
      <div class="form-group">
        <input type="password" class="form-control" placeholder="Password" ng-model="user.password"></input>
      </div>
      <button type="submit" class="btn btn-primary">Log In</button>
    </form>
  </script>


